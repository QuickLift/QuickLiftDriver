<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.adarsh.quickliftdriver.activities.RidesActivity">
    <ImageView
        android:id="@+id/no_ride"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/no_rides"/>
    <Button
        android:id="@+id/curr_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Current Ride"
        android:background="@color/front_color"/>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:divider="@android:color/transparent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_margin="5dp"
        android:layout_below="@+id/curr_ride"/>

</RelativeLayout>